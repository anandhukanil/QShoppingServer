{
  "parser": "@typescript-eslint/parser",
  "extends": ["plugin:@typescript-eslint/recommended"],
  "parserOptions": { "ecmaVersion": 2018, "sourceType": "module" },
  "rules": {
    "indent": [
      "error",
      2
  ],
  "linebreak-style": [
      "error",
      "unix"
  ],
  "quotes": [
      "error",
      "double"
  ],
  "semi": [
      "error",
      "always"
  ],
  "max-len": [
    "error",
    { "code": 120 }
  ],
  "no-duplicate-imports": "error",
  "no-unused-vars": "error",
  "no-console": [
    "error",
    { "allow": ["error"]}
  ]
  }
}